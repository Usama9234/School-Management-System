@model School_Management_System.Models.Admin.TeacherDetails

@{
    ViewData["Title"] = "DeleteTeacher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Student</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="ViewClasses">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title m-b-0"><i class="fas fa-calendar-alt"></i> Are you sure you want to delete this?</h3>
                    </div>

                    <div class="row">
                        <div class=" card-body">

                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TeacherName" class="control-label col-md-5">Name</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.TeacherName</span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MobileNumber" class="control-label col-md-3">Mobile Number</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.MobileNumber</span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TeacherAdress" class="control-label col-md-3">Adress</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.TeacherAdress</span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TeacherEmail" class="control-label col-md-4">Email</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.TeacherEmail</span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Gender" class="control-label col-md-3"></label>
                                            <span asp-for="SubjectName" class="form-control">@Model.Gender</span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TeacherDOB" class="control-label col-md-3">Date Of Birth</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.TeacherDOB</span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="Password" class="control-label col-md-3"></label>
                                            <span asp-for="SubjectName" class="form-control">@Model.Password</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <form asp-action="DeleteTeacher">
                                        <input type="hidden" asp-for="TeacherId" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <a asp-action="ViewTeachers" class="btn btn-default">Back to List</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>