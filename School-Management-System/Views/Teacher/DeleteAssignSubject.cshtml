@model School_Management_System.Models.Admin.AssignedSubjects

@{
    ViewData["Title"] = "DeleteAssignSubject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Student</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="ViewClasses">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title m-b-0"><i class="fas fa-calendar-alt"></i> Are you sure you want to delete this?</h3>
                    </div>

                    <div class="row">
                        <div class=" card-body">

                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-5">Teacher Name</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.Teachername</span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Class Name</label>
                                            <span asp-for="StudentRollNo" class="form-control">@Model.ClassName</span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Subject Name</label>
                                            <span asp-for="SubjectName" class="form-control">@Model.SubjectName</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <form asp-action="DeleteAssignSubject">
                                        <input type="hidden" asp-for="AssignedSubjectId" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <a asp-action="ViewAssignSubjects" class="btn btn-default">Back to List</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>