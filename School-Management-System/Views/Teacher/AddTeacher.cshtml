@model School_Management_System.Models.Admin.TeacherDetails
@{
    ViewBag.Title = "AddTeacher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Teachers</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Teacher</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-users"></i> Add Teachers</h5>
                    </div>

                    <div class="row">
                        <div class=" card-body">
                            <form asp-action="AddTeacher" asp-controller="Teacher" method="post" enctype="multipart/form-data">

                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label asp-for="TeacherName" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="TeacherName" class="form-control" />
                                            <span asp-validation-for="TeacherName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    @* <div class="form-group">
                                        <label asp-for="Class.ClassName" class="control-label col-md-3">Assign Class </label>
                                        <select asp-for="ClassId" class="form-control">
                                            <option value="">Select a Class</option>
                                            @foreach (var item in Model.ClassesList)
                                            {
                                                <option value="@item.ClassId">@item.ClassName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Class.ClassName" class="text-danger"></span>

                                    </div> *@

                                    <div class="form-group">
                                        <label asp-for="Gender" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Gender" class="form-control" />
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <label asp-for="MobileNumber" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="MobileNumber" class="form-control" />
                                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                        </div>
                                    </div>


                                    

                                    <div>
                                        <div class="form-group">
                                            <label asp-for="TeacherEmail" class="control-label col-md-2"></label>
                                            <div class="col-md-10">
                                                <input asp-for="TeacherEmail" class="form-control" />
                                                <span asp-validation-for="TeacherEmail" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="TeacherAdress" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="TeacherAdress" class="form-control" />
                                            <span asp-validation-for="TeacherAdress" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <label asp-for="TeacherDOB" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="TeacherDOB" class="form-control" type="date" />
                                            <span asp-validation-for="TeacherDOB" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-default">Create</button>
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
