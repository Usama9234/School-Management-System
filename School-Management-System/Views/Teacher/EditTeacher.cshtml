@model School_Management_System.Models.Admin.TeacherDetails

@{
    ViewData["Title"] = "EditTeacher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a a asp-action="ViewClasses">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-calendar-alt"></i> Edit Class</h5>
                    </div>

                    <div class="row">
                        <div class=" card-body">
                            <form asp-controller="Teacher" asp-action="EditTeacher" method="post">
                                <div class="form-horizontal">
                                    <input asp-for="TeacherId" type="hidden" />

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="TeacherName" class="control-label col-md-2">Name</label>
                                                <div class="col-md-10">
                                                    <input asp-for="TeacherName" class="form-control" />
                                                    <span asp-validation-for="TeacherName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Gender" class="control-label col-md-2">Gender</label>
                                                <div class="col-md-10">
                                                    <input asp-for="Gender" class="form-control" />
                                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label asp-for="MobileNumber" class="control-label col-md-2">Mobile Number</label>
                                                <div class="col-md-10">
                                                    <input asp-for="MobileNumber" class="form-control" />
                                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div>
                                                <div class="form-group">
                                                    <label asp-for="TeacherEmail" class="control-label col-md-2">Email</label>
                                                    <div class="col-md-10">
                                                        <input asp-for="TeacherEmail" class="form-control" />
                                                        <span asp-validation-for="TeacherEmail" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label asp-for="TeacherAdress" class="control-label col-md-2">Adress</label>
                                                <div class="col-md-10">
                                                    <input asp-for="TeacherAdress" class="form-control" />
                                                    <span asp-validation-for="TeacherAdress" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label asp-for="TeacherDOB" class="control-label col-md-2">DOB</label>
                                                <div class="col-md-10">
                                                    <input asp-for="TeacherDOB" class="form-control" type="date" />
                                                    <span asp-validation-for="TeacherDOB" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label asp-for="Password" class="control-label col-md-2">Password</label>
                                                <div class="col-md-10">
                                                    <input asp-for="Password" class="form-control" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <button type="submit" class="btn btn-default">Update</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>